<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    tools:context=".RincianGedungActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/lapangan" />

        <TextView
            android:id="@+id/nama_gedung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal|top"
            android:text="Gedung A"
            android:textColor="@color/c4"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/jalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="240dp"
            android:gravity="center_horizontal|top"
            android:text="Jl. Merdeka No.7, Jati, Kec. Pauh, Kota Padang"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/nmr_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="265dp"
            android:gravity="center_horizontal|top"
            android:text="085209876123"
            android:textSize="13sp" />

    <!-- Rectangle 17 -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="347dp"
            android:layout_height="420dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="295dp"
            android:background="@drawable/rectangle" />

    <!-- Lapangan futsal yang ada di daerah Kota Padang, tempat strategis, nyaman, pengcahayaan cukup, terdapat kantin, musholla dan parkir -->
        <TextView
            android:id="@+id/ket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="310dp"
            android:gravity="center_horizontal|top"
            android:padding="15dp"
            android:text="Lapangan futsal yang ada di daerah Kota Padang, tempat strategis, nyaman, pengcahayaan cukup, terdapat kantin, musholla dan parkir"
            android:textSize="13sp" />


    <!-- Jadwal dan Harga -->
        <TextView
            android:id="@+id/jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="410dp"
            android:gravity="center_horizontal|top"
            android:text="Jadwal dan Harga"
            android:textSize="13sp" />

    <!-- Line 8 -->
        <View
            android:id="@+id/line_8"
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="403dp"
            android:background="@drawable/line" />


    <!-- Rectangle 20 -->
        <View
            android:layout_width="315dp"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="435dp"
            android:background="@drawable/rectangle_2" />

    <!-- Senin-Kamis -->
        <TextView
            android:id="@+id/hari1"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:gravity="top"
            android:text="Senin-Jumat"
            android:textSize="15sp" />


    <!-- Sabtu-Minggu -->
        <TextView
            android:id="@+id/hari2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="570dp"
            android:gravity="top"
            android:text="Sabtu - Minggu"
            android:textSize="15sp" />

    <!-- Jam 08.00 - 16.00 : Rp.80.000/jam -->
        <TextView
            android:id="@+id/j1"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="475dp"
            android:gravity="top"
            android:text="Jam : 08.00 - 12.00                   Rp80.000"
            android:textSize="13sp" />

    <!-- Jam 08.00 - 16.00 : Rp.80.000/jam -->
        <TextView
            android:id="@+id/j2"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="505dp"
            android:gravity="top"
            android:text="Jam : 13.00 - 18.00                   Rp90.000"
            android:textSize="13sp" />

    <!-- Jam 08.00 - 16.00 : Rp.80.000/jam -->
        <TextView
            android:id="@+id/j3"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:gravity="top"
            android:text="Jam : 19.00 - 23.00                   Rp100.000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/j4"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:gravity="top"
            android:text="Jam : 08.00 - 09.00                   Rp100.000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="665dp"
            android:background="@drawable/button_styles"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Pesan Sekarang"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</ScrollView>