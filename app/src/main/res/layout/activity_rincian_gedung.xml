<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    tools:context=".RincianGedungActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/lapangan" />

        <TextView
            android:id="@+id/nama_gedung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal|top"
            android:text="Gedung A"
            android:textColor="@color/c4"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="240dp"
            android:gravity="center_horizontal|top"
            android:textColor="@color/black"
            android:text="Jl. Merdeka No.7, Jati, Kec. Pauh, Kota Padang"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/nmr_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="265dp"
            android:gravity="center_horizontal|top"
            android:textColor="@color/black"
            android:text="085209876123"
            android:textSize="13sp" />

        <!-- Rectangle 17 -->
        <View
            android:id="@+id/rectangle_1"
            android:layout_width="347dp"
            android:layout_height="420dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="295dp"
            android:background="@drawable/rectangle" />

        <!-- Lapangan futsal yang ada di daerah Kota Padang, tempat strategis, nyaman, pengcahayaan cukup, terdapat kantin, musholla dan parkir -->
        <TextView
            android:id="@+id/ket"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="300dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/black"
            android:text="Lapangan futsal yang ada di daerah Kota Padang, tempat strategis, nyaman, pengcahayaan cukup, terdapat kantin, musholla dan parkir"
            android:textSize="13sp" />


        <!-- Jadwal dan Harga -->
        <TextView
            android:id="@+id/jadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="420dp"
            android:gravity="center_horizontal|top"
            android:text="Jadwal dan Harga"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <!-- Rectangle 20 -->
        <View
            android:layout_width="315dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="455dp"
            android:background="@drawable/rectangle_2" />

        <!-- Line 8 -->
        <View
            android:id="@+id/line_8"
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="403dp"
            android:background="@drawable/line" />


        <TableLayout
            android:id="@+id/tl1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="450dp">

            <TableRow>

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="Tanggal"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/datedeparture"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_date_range"
                    android:drawableRight="@drawable/ic_date_range"
                    android:focusable="true"
                    android:hint="pilih tanggal"
                    android:padding="5dp"
                    style="@style/BlackText"
                    android:textSize="13dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Jam  "
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Spinner
                    android:id="@+id/spjam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    style="@style/BlackText"
                    android:layout_marginTop="20dp"
                    android:autofillHints="pilih jam" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/durasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Durasi  "
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editdurasi"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:hint="durasi perjam"
                    android:padding="5dp"
                    style="@style/BlackText"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="/jam"
                    android:textSize="13sp" />

            </TableRow>


        </TableLayout>

        <TextView
            android:layout_toLeftOf="@id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tl1"
            android:layout_marginTop="15dp"
            android:text="Harga : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tl1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp"
            android:text="75000"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="665dp"
            android:background="@drawable/button_styles"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Pesan Sekarang"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</ScrollView>